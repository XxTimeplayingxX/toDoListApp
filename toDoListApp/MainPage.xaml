<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="toDoListApp.MainPage">

    <ScrollView>
        <StackLayout
            Spacing="25"
            Background="Beige"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
               Source="https://seeklogo.com/images/S/spider-man-comic-new-logo-322E9DE914-seeklogo.com.png"
                BackgroundColor="Beige"
                VerticalOptions="Center"
                HeightRequest="100"
                WidthRequest="100"
                />

            <StackLayout Orientation="Horizontal">
                <Entry HorizontalOptions="StartAndExpand"
                       WidthRequest="270"
                       PlaceholderColor="Black" Placeholder="nueva Tarea"
                    />
                <Button
                    x:Name="CounterBtn"
                    Padding="10, 10"
                    Text="Agregar"
                    />
            </StackLayout>

            <StackLayout VerticalOptions="FillAndExpand">
                <ListView BackgroundColor="Red"/>
            </StackLayout>

        </StackLayout>
    </ScrollView>

</ContentPage>
